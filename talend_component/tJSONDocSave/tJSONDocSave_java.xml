<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER 
		AUTHOR="cimt AG" 
		COMPATIBILITY="ALL"
		SCHEMA_AUTO_PROPAGATE="true" 
		PLATEFORM="ALL" 
		RELEASE_DATE="20161010"
		SERIAL="" 
		STARTABLE="true" 
		STATUS="PROD" 
		VERSION="5.3">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>JSON</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="0"
			MIN_OUTPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER 
			NAME="JSON_DOCUMENT" 
			FIELD="COMPONENT_LIST" 
			NUM_ROW="10"
			FILTER="tJSONDocOpen"
			REQUIRED="true"
		/>

		<PARAMETER
			NUM_ROW="20"
			FIELD="CHECK" 
			NAME="OUTPUT_AS_FILE" 
			REQUIRED="true" 
		> 
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NUM_ROW="30"
			FIELD="FILE" 
			NAME="OUTPUT_FILE_PATH" 
			SHOW_IF="OUTPUT_AS_FILE == 'true'"
			REQUIRED="true" 
		> 
			<DEFAULT>"/path/to/output_file.json"</DEFAULT>
		</PARAMETER>

		<PARAMETER 
			NAME="SCHEMA" 
			FIELD="SCHEMA_TYPE" 
			REQUIRED="false" 
			NUM_ROW="40">
			<DEFAULT />
		</PARAMETER>

		<PARAMETER 
			NAME="JSON_OUTPUT_COLUMN" 
			FIELD="COLUMN_LIST"
			NUM_ROW="50"
		>
		</PARAMETER>

		<PARAMETER
			NUM_ROW="60"
			FIELD="CHECK" 
			NAME="PRETTY_PRINT" 
			REQUIRED="true" 
		> 
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NUM_ROW="60"
			FIELD="CHECK" 
			NAME="IGNORE_EMPTY" 
			REQUIRED="true" 
		> 
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NUM_ROW="70"
			FIELD="CHECK" 
			NAME="STD_OUTPUT" 
			REQUIRED="true" 
		> 
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
	</CODEGENERATION>

	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="OUTPUT_FILE_PATH" TYPE="id_String" />
		<RETURN AVAILABILITY="AFTER" NAME="JSON_STRING" TYPE="id_String" />
	</RETURNS>
</COMPONENT>
	